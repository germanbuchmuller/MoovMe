<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarTarifaActivity">

    <Spinner
        android:id="@+id/activoSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@+id/zonaSpinner2"
        app:layout_constraintStart_toStartOf="@+id/zonaSpinner2"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/precioEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Precio/minuto"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/activoSpinner"
        app:layout_constraintStart_toStartOf="@+id/activoSpinner"
        app:layout_constraintTop_toBottomOf="@+id/activoSpinner" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tipo de activo:"
        app:layout_constraintStart_toStartOf="@+id/zonaSpinner2"
        app:layout_constraintTop_toBottomOf="@+id/zonaSpinner2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Zona:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Agregar"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="@+id/precioEditText"
        app:layout_constraintStart_toStartOf="@+id/precioEditText"
        app:layout_constraintTop_toBottomOf="@+id/precioEditText" />

    <Spinner
        android:id="@+id/zonaSpinner2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />
</androidx.constraintlayout.widget.ConstraintLayout>