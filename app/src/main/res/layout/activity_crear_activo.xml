<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearActivoPopUp">

    <Button
        android:id="@+id/guardarBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="@+id/tipoDeActivoEditText"
        app:layout_constraintStart_toStartOf="@+id/tipoDeActivoEditText"
        app:layout_constraintTop_toBottomOf="@+id/puntosEditText" />

    <EditText
        android:id="@+id/tipoDeActivoEditText"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Tipo de activo"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/puntosEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Puntos"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/tipoDeActivoEditText"
        app:layout_constraintStart_toStartOf="@+id/tipoDeActivoEditText"
        app:layout_constraintTop_toBottomOf="@+id/tipoDeActivoEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>