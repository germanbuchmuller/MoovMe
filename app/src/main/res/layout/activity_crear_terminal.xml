<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearTerminalPopUp">

    <EditText
        android:id="@+id/direccionEditText"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="DirecciÃ³n de la Terminal"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/zonaSpinner"
        app:layout_constraintStart_toStartOf="@+id/zonaSpinner"
        app:layout_constraintTop_toBottomOf="@+id/zonaSpinner" />

    <Button
        android:id="@+id/guardarBtn3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Agregar"
        app:layout_constraintEnd_toEndOf="@+id/direccionEditText"
        app:layout_constraintStart_toStartOf="@+id/direccionEditText"
        app:layout_constraintTop_toBottomOf="@+id/direccionEditText" />

    <Spinner
        android:id="@+id/zonaSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Seleccionar zona de la Terminal:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>