<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EstablecerHoraDeEntregaPopUp">

    <CheckBox
        android:id="@+id/checkBoxHoraEntrega"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Establecer hora de entrega"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confirmarAlquilerBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Confirmar Alquiler"
        app:layout_constraintEnd_toEndOf="@+id/horaEditText"
        app:layout_constraintStart_toStartOf="@+id/horaEditText"
        app:layout_constraintTop_toBottomOf="@+id/minutoEditText" />

    <EditText
        android:id="@+id/horaEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Hora"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/checkBoxHoraEntrega"
        app:layout_constraintStart_toStartOf="@+id/checkBoxHoraEntrega"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxHoraEntrega" />

    <EditText
        android:id="@+id/minutoEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Minuto"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/horaEditText"
        app:layout_constraintStart_toStartOf="@+id/horaEditText"
        app:layout_constraintTop_toBottomOf="@+id/horaEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>